<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <RelativeLayout
        android:id="@+id/ranking_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="53dp"
            android:layout_height="55dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:background="@color/backgroundSplashScreen"
            android:scaleType="fitXY"
            android:src="@drawable/validation"
            android:layout_alignParentLeft="true"/>
        <ImageButton
            android:id="@+id/ranking_user_button"
            android:layout_width="53dp"
            android:layout_height="55dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:background="@color/backgroundSplashScreen"
            android:scaleType="fitXY"
            android:src="@drawable/user"
            android:layout_toLeftOf="@+id/ranking_legend"
            />
        <ImageButton
            android:id="@+id/ranking_legend"
            android:layout_width="53dp"
            android:layout_height="55dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:background="@color/backgroundSplashScreen"
            android:scaleType="fitXY"
            android:src="@drawable/chevron1"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    </LinearLayout>

</RelativeLayout>